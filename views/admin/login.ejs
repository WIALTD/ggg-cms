<div class="container">
    <div class="login-form">
        <h1>Admin Login</h1>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>

        <% if (typeof noUsers !== 'undefined' && noUsers) { %>
            <div class="warning-message">
                <strong>No admin users exist yet.</strong><br>
                <a href="/admin/create-admin" class="btn btn-primary">Create First Admin User</a>
            </div>
        <% } %>

        <% if (typeof message !== 'undefined' && message === 'admin-created') { %>
            <div class="success-message">
                <strong>âœ… Admin user created successfully!</strong><br>
                Email: alexander@globalguidegroup.com<br>
                Password: SecurePass123!
            </div>
        <% } %>

        <% if (typeof message !== 'undefined' && message === 'users-exist') { %>
            <div class="warning-message">
                <strong>Admin users already exist.</strong><br>
                Please use the login form below.
            </div>
        <% } %>

        <% if (typeof message !== 'undefined' && message === 'error') { %>
            <div class="error-message">
                <strong>Error creating admin user.</strong><br>
                Please try again or contact support.
            </div>
        <% } %>
        
        <form method="POST" action="/admin/login">
            <div class="form-group">
                <label for="email">Email:</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    value="<%= typeof email !== 'undefined' ? email : '' %>"
                >
            </div>
            
            <div class="form-group">
                <label for="password">Password:</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required
                >
            </div>
            
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        
        <div class="login-info">
            <p class="muted">Admin users must be created by an existing administrator.</p>
        </div>
    </div>
</div>
