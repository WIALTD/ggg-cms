<div class="container">
    <div class="admin-header">
        <h1><%= title %></h1>
        <a href="/admin/dashboard" class="btn btn-secondary">‚Üê Back to Dashboard</a>
    </div>

    <div class="user-form-container">
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>

        <form method="POST" action="/admin/users" class="user-form">
            <div class="form-group">
                <label for="email">Email Address *</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    value="<%= user ? user.email : '' %>" 
                    required
                    placeholder="user@example.com"
                >
                <small class="form-help">This will be the user's login email address.</small>
            </div>

            <div class="form-group">
                <label for="password">Password *</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required
                    placeholder="Enter a secure password"
                    minlength="6"
                >
                <small class="form-help">Password must be at least 6 characters long.</small>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    Create User
                </button>
                <a href="/admin/dashboard" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <div class="user-info">
        <h3>User Account Information</h3>
        <div class="info-box">
            <p><strong>Security Note:</strong></p>
            <p>Admin users must be created explicitly. There are no default credentials.</p>
            <p class="muted">Each user account requires a unique email address and secure password.</p>
        </div>
    </div>
</div>
